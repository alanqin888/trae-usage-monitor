{
  "name": "trae-ai-usage-monitor",
  "displayName": "Trae AI Usage Monitor",
  "publisher": "alanqin",
  "description": "Show Trae AI Fast Request usage in status bar",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/alanqin888/trae-usage-monitor"
  },
  "keywords": [
    "trae",
    "ai",
    "usage",
    "monitor",
    "status bar"
  ],
  "version": "1.0.5",
  "engines": {
    "vscode": "^1.74.0"
  },
  "scripts": {
    "package": "npx vsce package",
    "publish": "npx vsce publish",
    "publish:patch": "npx vsce publish patch",
    "publish:minor": "npx vsce publish minor"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./extension.js",
  "contributes": {
    "icons": {
        "trae-pro": {
            "description": "Icon for Trae Pro Plan",
            "default": {
                "fontPath": "./icon-pro.svg",
                "fontCharacter": "\\e900" 
            }
        },
        "trae-extra": {
            "description": "Icon for Trae Extra Package",
            "default": {
                "fontPath": "./icon-extra.svg",
                "fontCharacter": "\\e901" 
            }
        }
    },
    "configuration": {
      "title": "Trae Usage",
      "properties": {
        "traeMonitor.apiUrl": {
          "type": "string",
          "default": "",
          "description": "The API URL to fetch usage data (from browser network tab)"
        },
        "traeMonitor.token": {
          "type": "string",
          "default": "",
          "description": "The 'Cloud-IDE-JWT' token from browser headers"
        }
      }
    }
  }
}
